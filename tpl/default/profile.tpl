<div class="profilbg">
    <div class="player-info">
        <div class="content"> {STATUS}{L_DETAILS}</div>
        <table width="100%" cellpadding="4" style="border:none ;">
            <tr>
                <td style="width:25%" class="valign-top">
                    <div style="justify-content:left">
                        {AVATAR}<br />{NAME}<br />
                    </div>
                </td>
                <td style="width:90%; text-align:left;" class="valign-top">
                    Site Rank: {GROUP} <br />
                    Forum Rank: {RANK}<br />
                    {L_JOINED}: {JOINED}<br />
                    {L_LAST_LOGIN}: {LASTLOGIN}<br />
                    Last Activity: {STALKED}<br />
                    {L_GENDER}: {GENDER}<br />
                    {L_LOCATION}: {LOCATION} <br />
                    {WARNINGS}

                </td>

            </tr>
        </table>
    </div>

    <div class="game-info">
        <div class="content">Game Information</div>
        <table width="100%" cellpadding="4" style="border:none ;">
            <tr>
                <td style="width:30%; text-align:left;" class="valign-top">
                    Level {LEVEL}<br />
                    {GR}<br />
                    Experience Points: {EXP}<br />
                    Ladder Rank: {MYRANK}<br />
                    Clan: {CLAN}<br />
                    Wins: {WIN}<br />
                    Losses: {LOSE}<br />
                    Highest Streak: + {HSTREAK}<br />
                    Streak: {STREAK}<br />
                    Win percentage: {WR}<br />
                </td>

            </tr>
        </table>
    </div>

    <div class="game-activity">
        <div class="content">Game Activity</div>
        <table width="100%" cellpadding="4" style="border:none ;">
            <tr>
                <td style="width:90%;text-align:center;" class="valign-top">
                    {MATCHHISTORY}
                </td>
            </tr>
        </table>

    </div>
</div>